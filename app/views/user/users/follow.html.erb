
<h1>Follow User</h1>

<table class="table">
	<thead>
		<tr>
			<th>image</th>
			<th>name</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @user.following_user.each do |user|  %>
		<tr>
			<td><%= user.name%></td>
			<td>フォロー数<%= user.follower.count %></td>
		    <td>フォロワー数<%= user.followed.count %></td>
			<% unless user == current_user %>
			<% if current_user.following?(user) %>

      <td>  <%= link_to 'フォロー外す', relationship_path(user.id), method: :delete %></td>
      <% else %>
       <td> <%= link_to 'フォローする', relationships_path(user.id), method: :POST %>
      </td>
      <% end %>
      <% end %>
			<td><%= link_to "Show", user, class: "user_#{user.id}" %></td>
		</tr>
	  <% end %>
	</tbody>
   </table>
    </div>
    </div
<div class ="container">
  <div class ="row">
    <h2><%= @user.name %>さんの会員情報編集</h2><br>
  </div>
  <div class ="row">
    <div class ="col-md-3 d-flex align-items-center">
      <div class ="user_image">
        <%= attachment_image_tag @user, :image,size: "150x150", fallback: "download.png"%>
      </div>
    </div>
    <div class ="col-md-9">
      <table class ='table'>
        <%= form_with(model:@user, url:user_path,local:true) do |form| %>
          <tr>
            <th><%= form.label :User画像 %></th>
            <td><%= form.attachment_field :image %></td>
          </tr>
          <tr>
            <th><%= form.label :名前 %></th>
            <td><%= form.text_field :name%></td>
          </tr>
          <tr>
            <th><%= form.label :メールアドレス %></th>
            <td><%= form.text_field :email %></td>
          </tr>
          <tr>
            <th><%= form.label :自己紹介文 %></th>
            <td><%= form.text_area :profile,rows:'5', class: "form-control",placeholder: "あなたのことを書きましょう"%></td>
          </tr>
          <tr>
            <th><%= form.submit :変更を保存する %></th>
          </tr>
        <% end %>
      </table>
    <div><%= link_to "退会する",confirm_path, class: "btn btn-danger" %></div>
  </div>
</div>
</div>
</div>
<div class ="container">
  <div class ="row">
    <table class ='table'>
   	  <tr>
   	    <th>ID</th>
   	    <td><%= @recommend.id %></td>
   	  </tr>
      <tr>
        <th>画像</th>
        <td><%= attachment_image_tag @recommend, :recommend_image, :fill, 150, 150 %></td>
      <tr>
   	  <tr>
   	    <th>店名</th>
   	    <td><%= @recommend.recommend_shop_name %></td>
   	  </tr>
   	  <tr>
   	    <th>オススメ理由</th>
   	    <td><%= @recommend.recommend_shop_profile %></td>

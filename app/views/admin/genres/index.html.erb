<div class ="container">
  <div class ="row">
    <div class ="col-md-12">
      <p class ="content1" >
        <h2>ジャンル一覧・追加</h2>
      </p>
        <%= form_with(model: @genre_new, url:admin_genres_path, local: true) do |form| %>
          <%= form.label :ジャンル名 %>
          <%= form.text_field :genre_name %>
          <%= form.radio_button :genre_status, true %>
          <%= form.label :genre_status, "有効", {value: :true, style:"diplay: inline-block"} %>
          <%= form.radio_button :genre_status, :false %>
          <%= form.label :genre_status, "無効", {value: :false, style: "display: inline-block;"} %>
          <%= form.submit :追加,class: "btn btn-primary" %>
        <% end %>

        <table class ='table table-striped'>
          <p class ="content2" >
            <thead>
              <tr>
                <th>ジャンル</th>
                <th>ステータス</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @genres.each do |genre| %>
              <tr>
                <td><%= genre.genre_name %></td>
                <td>
                <% if genre.genre_status %>
                  有効
                <% else %>
                  無効
                <% end %>
                </td>
                <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-primary"%></td>
              </tr>
              <% end %>
            </tbody>
          </p>
        </table>
    </div>
  </div>
</div>